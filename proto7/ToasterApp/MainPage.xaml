<Page
    x:Class="Toaster.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Toaster"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" HorizontalAlignment="Left" Margin="3" Source="Assets\toaster.png" VerticalAlignment="Top"/>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="50*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Height="120" Width="120">
                    <Button x:Name="buttonStart" Content="Start Toasting" HorizontalAlignment="Left" VerticalAlignment="Top" Click="OnStart"/>
                    <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Text="Status:" VerticalAlignment="Top" Width="Auto"/>
                    <TextBlock HorizontalAlignment="Left" Text="Ready" VerticalAlignment="Top" Width="Auto" FontStyle="Italic"/>
                    <Button x:Name="buttonStop" Content="Stop Toasting" HorizontalAlignment="Left" VerticalAlignment="Top" Click="OnStop"/>
                </StackPanel>
                <Slider x:Name="slider" VerticalAlignment="Top" Height="100" Orientation="Vertical"/>
                <!-- need the border to reserve the space while the image is invisible -->
                <Border Width="32" Background="Transparent">
                    <Image x:Name="imageHot" Source="Assets\hot.png" VerticalAlignment="Top" Width="32"/>
                </Border>
            </StackPanel>
        </Grid>

        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="64"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120">
                    <Button Content="System Reset" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Click="OnSystemReset" />
                    <Button Content="System Restart" HorizontalAlignment="Left" Margin="0,5,0,0" VerticalAlignment="Top" Width="120" Click="OnSystemRestart" />
                    <Button Content="Check Updates" HorizontalAlignment="Left" Margin="0,5,0,0" VerticalAlignment="Top" Width="120" Click="OnCheckForUpdates" />
                    <TextBlock x:Name="StatusText"/>
                </StackPanel>
                <Image Grid.Column="1" HorizontalAlignment="Left" Source="Assets\gear.png" VerticalAlignment="Top"/>
            </Grid>
        </Border>
    </Grid>
</Page>
